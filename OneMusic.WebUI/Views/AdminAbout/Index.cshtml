@model List<About>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3 style="align-content:center ; text-align:center">Abouts</h3>
<br />

<table class="table table-bordered table-hover">
	<tr>
		<th style="align-content:center ; text-align:center ; font-size:larger">Id</th>
		<th style="align-content:center ; text-align:center ; font-size:larger">Title</th>
		<th style="align-content:center ; text-align:center ; font-size:larger">Description</th>
		<th style="align-content:center ; text-align:center ; font-size:larger">Image</th>
		<th style="align-content:center ; text-align:center ; font-size:larger">Actions</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td style="align-content:center">@item.AboutId</td>
			<td style="align-content:center">@item.Title</td>
			<td style="align-content:center">@item.Description</td>
			<td>
				<img src="@item.ImageUrl" style="align-content:center" alt="About Image" style="max-width: 100px; max-height: 100px;" />
			</td>
			<td style="justify-content : space-around ; display : flex ">
				<a asp-action="UpdateAbout" asp-route-id="@item.AboutId" class="btn btn-primary">Update</a>
				<a asp-action="DeleteAbout" asp-route-id="@item.AboutId" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	}
</table>
<br />
